
<h1 class="tac"><%= @article.title %> </h1>
<p class="tac">Jess Fang | TAGS | <%= @article.created_at.strftime("%B %e, %Y") %>
<p class="tac"><%= link_to 'Edit', edit_article_path(@article) %></p>
<%= image_tag(@article.featured_image.url, :alt => @article.title, :class => "featured-image ma") %> 

<p id="article-text"><%= @article.text %></p>
 <h2>Comments</h2>
<%= render @article.comments %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

 
<h3 class="tac outline ttu">Read Next</h3>
<section class="flex-container-no jcc" id="read-next-container"> 
<% @articles.each do | article | %>
  <%= link_to article_path(article) do %>
    <div>
      <%= image_tag(article.featured_image.url, :alt => article.title, :class => "fw") %>
      <p class="tac nmb"><span><%= article.title %></span></p>
      <p class="subscript tac nm">TAGS</p>
    </div>
  <% end %>
<% end %>
</section>